<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/total_label"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Total:"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/total_amt"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/total_label"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="+ $13.37"
                android:textColor="@color/green"
                android:textSize="36sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/entry_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/expenses_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Total Expenses"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:id="@+id/expenses_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expenses_label"
                android:text="$13.37"
                android:textSize="28sp"
                android:paddingLeft="15dp"/>
            <ListView
                android:id="@+id/expenses_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expenses_total"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/entry_earnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/earnings_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Total Earnings"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/earnings_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/earnings_label"
                android:text="$13.37"
                android:textSize="28sp"
                android:paddingLeft="15dp"/>

            <ListView
                android:id="@+id/earnings_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/earnings_total"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
